<div class="ui padded basic article segment">
  <h2 class="ui large header">
    <a href="/{{ post.getCategory() }}/@{{ post.author }}/{{ post.permlink }}">
      {{ post.title }}
    </a>
    <div class="sub header">
      {{ "%datetime%" | trans({'%datetime%' : post.ts | date("d M Y")})}}
      by
      <a href="https://steemdb.com/@{{ post.author }}">
        {{ post.author }}
      </a>
      {% for tag in post.getTags() %}
        {% if tag %}
        <a class="ui small label">
          #{{ tag }}
        </a>
        {% endif %}
      {% endfor %}
    </div>
  </h2>
  {% if preview is not defined %}
    <div class="ui divider"></div>
  {% endif %}
  <div class="article-content">
    {% if preview is defined %}
      {{ post.html_preview | raw }}
    {% else %}
    {{ post.html | raw }}
    {% endif %}
  </div>
  {% if preview is defined %}
  <div class="ui basic segment">
    <a class="ui primary right floated button" href="/{{ post.getCategory() }}/@{{ post.author }}/{{ post.permlink }}"  class="continue-reading">
      {{ 'Read more...' | trans }}
    </a>
  </div>
  {% endif %}
</div>
